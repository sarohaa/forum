<h1>Articles Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<ul>
  <% @questions.each do |q| %>
    <li>
      <h3>
        <%= link_to q.title, controller: "home", action: "index", id: q._id %>
      </h3>
    </li>
  <% end %>
</ul>