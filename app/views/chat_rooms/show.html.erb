<div class="row">
  <div class="col-md-6 col-md-offset-3">
<h1><%= @chat_room.title %></h1>

<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @chat_room.messages %>
</div>
<%= form_for @message, url: '#' do |f| %>
 <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
    <%= f.text_area :body, class: 'form-control',placeholder: "Type here (From 2 to 1000 characters)" %>
<br>
  <%= f.submit "Post", class: 'btn btn-primary btn-sm' %>
<% end %>
</div>
</div>
</div>