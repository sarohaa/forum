  <p><%= answer.content %> <small class="text-muted">by <%= answer.user.name %></small>
  	<% if user_signed_in? %>
     <div class="btn-group" id="content<%= answer.id %>">
        <%= link_to like_question_answer_path(answer.question, answer), method: :put, remote: true do %>
        <i class="fa fa-thumbs-o-up fa-sm"></i>(<%= answer.get_upvotes.size %>)
      <% end %> 
      <%= link_to unlike_question_answer_path(answer.question, answer), method: :put, remote: true do %>
      <i class="fa fa-thumbs-o-down fa-sm"></i>(<%= answer.get_downvotes.size %>)
      <% end %>
  </div>
  <% if can? :destroy, answer %>
  <small><%= link_to "Delete", question_answer_path(answer.question, answer), method: :delete,remote: true %></small>
  <% end %>
  <% end %>
</p>